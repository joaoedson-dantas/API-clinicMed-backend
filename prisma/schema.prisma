// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  login         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Address {
  id         String    @id @default(uuid())
  road       String
  district   String
  zip_code   String
  complement String?
  number     String?
  uf         String
  city       String
  Doctor     Doctor[]
  Patient    Patient[]

  @@map("address")
}

model Doctor {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  tel       String
  crm       String  @unique
  specialty String
  address   Address @relation(fields: [addressId], references: [id])
  addressId String
  activated Int
  querys    Query[]

  @@map("doctors")
}

model Patient {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  tel        String
  cpf        String   @unique
  address    Address  @relation(fields: [addressId], references: [id])
  addressId  String
  activated  Int
  created_at DateTime @default(now())
  querys     Query[]

  @@map("patients")
}

model Query {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  start_time DateTime
  end_time   DateTime

  doctor              Doctor  @relation(fields: [doctorId], references: [id])
  patient             Patient @relation(fields: [patientId], references: [id])
  reason_cancellation String?
  patientId           String
  doctorId            String

  @@map("queries")
}
